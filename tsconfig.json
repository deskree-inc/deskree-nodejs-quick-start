{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "skipLibCheck": true,
  },
  "compileOnSave": true,
  "include": [
    "./src",
    "*.json"
  ]
}
